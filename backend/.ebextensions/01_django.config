option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "applaude_api.settings.production"
  aws:elasticbeanstalk:application:
    Application Healthcheck URL: /health/

container_commands:
  01_create_static_dir:
    command: "mkdir -p /var/app/current/staticfiles/"
  02_migrate:
    command: "django-admin migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "django-admin collectstatic --noinput --clear"
    leader_only: true
